<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>gMenu - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/gMenu.css")" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <header id="header">
            <div class="content-wrapper">
                <div id="restaurant-profile">
                    <div class="float-left">
                        <p class="site-title"><a href="@gMnts.gMenuContact"><span id="logo-first">g</span>Menu</a></p>
                    </div>
                    <div class="r"></div>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper clear-fix">
                <div class="main-content">
                    @RenderBody()
                </div>
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <p>@Html.Raw("&copy;")@DateTime.Now.Year - <a href="@gMnts.gMenuContact">gMenu Limited</a></p>
            </div>
        </footer>
    </body>
</html>

