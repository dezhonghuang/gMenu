<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>gMenu - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/gMenu.css")" rel="stylesheet" type="text/css" />
@*        <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />*@

        <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/themes/smoothness/jquery-ui.css" />

    </head>
    <body>
        <header id="header">
            <div class="content-wrapper">
                <div id="restaurant-profile">
                </div>
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper clear-fix">
                <div class="main-content">
                    @RenderBody()
                </div>
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <p><input id="btn-order" type="button" value="Place Order" /></p>
            </div>
        </footer>

        <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

@*        <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.11.1.min.js"></script>
        <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/jquery-ui.min.js"></script>*@
        <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/gMenu/cookie.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/gMenu/gMenu.js")" type="text/javascript"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>

