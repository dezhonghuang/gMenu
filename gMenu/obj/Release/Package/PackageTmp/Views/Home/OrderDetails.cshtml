@model gLibrary.ViewModels.OrderListModel

@{
    ViewBag.Title = "OrderDetails";
}

<h2>Your Order</h2>

@foreach (var item in Model.OrderDetails) {
    <p>@Html.DisplayFor(modelItem => item.Dish.Bilingual.FullName)</p>
    <p>@Html.DisplayFor(modelItem => item.Quantity) x @Html.DisplayFor(modelItem => item.Price)</p>
}
<div id="order-total">
    <span>Total: </span>@Html.DisplayFor(model => model.Order.Total)
</div>

